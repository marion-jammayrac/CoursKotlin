<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BonjourTexte"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22" />

    <ImageButton
        android:id="@+id/SauvegardeButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FFFF0000"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.787"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.149"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/PermissionButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.147"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="170dp"
        android:layout_height="101dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoisenmediterranee" />

    <TextView
        android:id="@+id/PermissionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/PermissionTexte"
        app:layout_constraintEnd_toEndOf="@+id/PermissionButton"
        app:layout_constraintStart_toStartOf="@+id/PermissionButton"
        app:layout_constraintTop_toBottomOf="@+id/PermissionButton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/SauvegardeTexte"
        app:layout_constraintEnd_toEndOf="@+id/SauvegardeButton"
        app:layout_constraintStart_toStartOf="@+id/SauvegardeButton"
        app:layout_constraintTop_toBottomOf="@+id/SauvegardeButton" />

    <ImageButton
        android:id="@+id/WebServicebutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:background="#FF0000"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/SauvegardeButton"
        app:layout_constraintStart_toStartOf="@+id/SauvegardeButton"
        app:layout_constraintTop_toBottomOf="@+id/SauvegardeButton"
        app:srcCompat="@android:drawable/stat_sys_download" />

    <ImageButton
        android:id="@+id/CycleDeVieButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/WebServicebutton"
        app:layout_constraintEnd_toStartOf="@+id/WebServicebutton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/PermissionButton"
        app:layout_constraintTop_toBottomOf="@+id/PermissionButton"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/stat_notify_chat" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/CycleDeVieTexte"
        app:layout_constraintEnd_toEndOf="@+id/CycleDeVieButton"
        app:layout_constraintStart_toStartOf="@+id/CycleDeVieButton"
        app:layout_constraintTop_toBottomOf="@+id/CycleDeVieButton" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/TelechargementTexte"
        app:layout_constraintEnd_toEndOf="@+id/WebServicebutton"
        app:layout_constraintStart_toStartOf="@+id/WebServicebutton"
        app:layout_constraintTop_toBottomOf="@+id/WebServicebutton" />

    <Button
        android:id="@+id/Decobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idDeco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>